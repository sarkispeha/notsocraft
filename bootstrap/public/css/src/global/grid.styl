*, *:after, *:before 
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box

.grid-pad
	padding: 20px 0 20px 20px

	> [class*='col-']:last-of-type
		padding-right: 20px

[class*='col-']
	float none
	width 100%
	padding-right: 20px
	&:last-of-type
		padding-right: 0

@media $screen-sm
	[class*='col-']
		float left
	.col-1-3
		width: 33.33%
	.col-1-2
		width: 50%
	.col-1-4
		width: 25%
	.col-1-8
		width: 12.5%
	.col-2-3
		width: 66.66%

